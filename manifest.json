{
  "manifest_version": 3,
  "version": "0.1.0",
  "name": "Pomodoro Tracker",
  "permissions": ["activeTab", "scripting", "tabs"],
  "description": "This is my first browser extension where I'm practise making demo pomodoro tracker",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "assets/pomodoro.png",
    "default_popup": "popup.html"
  }
}
